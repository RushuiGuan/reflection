<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>Latest</LangVersion>
		<Nullable>enable</Nullable>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<Description>A utility library that provides functionalities related to .Net reflection</Description>
		<PackageProjectUrl>$(RepositoryProjectRoot)/Albatross.Reflection</PackageProjectUrl>
	</PropertyGroup>
	<ItemGroup>
		<InternalsVisibleTo Include="Albatross.Reflection.Test" />
	</ItemGroup>
	<ItemGroup>
		<None Include="..\icon.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\LICENSE">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
	<ItemGroup Condition="$(TargetFramework) == 'netstandard2.0'">
	  <PackageReference Include="Albatross.CodeAnalysis.NetStandard2Helper" Version="8.0.0-30.main" PrivateAssets="All" />
	</ItemGroup>
</Project>